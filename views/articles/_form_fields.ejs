<div class="form-group mb-4">
   <label for="title">Title</label>
   <input type="text" class="form-control" name="title" id="title" value="<%= article.title %>" required>
</div>
<div class="form-group mb-4">
   <label for="description">Description</label>
   <textarea name="description" id="description" class="form-control"><%= article.description %></textarea>
</div>
<div class="form-group mb-4">
   <label for="markdown">Markdown</label>
   <textarea name="markdown" id="markdown" class="form-control" required><%= article.markdown %></textarea>
</div>

<div class="mb-4">
   <!-- Back to home -->
   <a href="/" class="btn btn-secondary">Cancel</a>
   <!-- Save -->
   <button type="submit" class="btn btn-success">Save</button>
</div>